---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Be More Free - Find your own answers with the Neutral Zone process. A radically different approach to personal transformation." } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://bemorefree.com');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph / Social Media -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Navigation -->
    <header class="fixed top-0 left-0 right-0 bg-white/90 backdrop-blur-md border-b border-gray-200/50 z-50 transition-all duration-300">
      <nav class="container mx-auto px-4">
        <div class="flex justify-between items-center h-20">
          <a href="/" class="flex items-center space-x-2 group">
            <div class="w-10 h-10 bg-gradient-to-br from-primary-600 to-accent-500 rounded-xl flex items-center justify-center text-white font-black text-xl group-hover:shadow-lg transition-all duration-300">
              BF
            </div>
            <span class="text-2xl font-bold text-gray-900">
              Be More Free
            </span>
          </a>
          
          <div class="hidden md:flex items-center space-x-8">
            <a href="/about" class="text-gray-700 hover:text-primary-600 font-medium transition-colors relative group">
              About
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary-600 group-hover:w-full transition-all duration-300"></span>
            </a>
            <a href="/neutral-zone" class="text-gray-700 hover:text-primary-600 font-medium transition-colors relative group">
              The Process
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary-600 group-hover:w-full transition-all duration-300"></span>
            </a>
            <a href="/practitioner" class="text-gray-700 hover:text-primary-600 font-medium transition-colors relative group">
              Practitioner
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary-600 group-hover:w-full transition-all duration-300"></span>
            </a>
            <a href="/blog" class="text-gray-700 hover:text-primary-600 font-medium transition-colors relative group">
              Blog
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary-600 group-hover:w-full transition-all duration-300"></span>
            </a>
            <a href="/booking/free-trial" 
               class="bg-gradient-to-r from-primary-600 to-accent-500 text-white px-6 py-3 rounded-full font-semibold hover:shadow-lg transform hover:scale-105 transition-all duration-300">
              Free Trial
            </a>
          </div>
          
          <!-- Mobile menu button -->
          <button class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors" id="mobile-menu-button">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
        
        <!-- Mobile menu -->
        <div class="hidden md:hidden py-4 border-t border-gray-200" id="mobile-menu">
          <div class="flex flex-col space-y-4">
            <a href="/about" class="text-gray-700 hover:text-primary-600 font-medium transition-colors px-4 py-2">
              About
            </a>
            <a href="/neutral-zone" class="text-gray-700 hover:text-primary-600 font-medium transition-colors px-4 py-2">
              The Process
            </a>
            <a href="/practitioner" class="text-gray-700 hover:text-primary-600 font-medium transition-colors px-4 py-2">
              Practitioner
            </a>
            <a href="/blog" class="text-gray-700 hover:text-primary-600 font-medium transition-colors px-4 py-2">
              Blog
            </a>
            <a href="/booking/free-trial" 
               class="bg-gradient-to-r from-primary-600 to-accent-500 text-white px-6 py-3 rounded-full font-semibold text-center mx-4">
              Free Trial
            </a>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content (add padding-top to account for fixed header) -->
    <main class="flex-grow pt-20">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gradient-to-br from-gray-900 to-gray-800 text-gray-300">
      <div class="container mx-auto px-4 py-16">
        <div class="grid md:grid-cols-4 gap-8 mb-12">
          <!-- Brand -->
          <div>
            <div class="flex items-center space-x-2 mb-4">
              <div class="w-10 h-10 bg-gradient-to-br from-primary-400 to-accent-400 rounded-xl flex items-center justify-center text-white font-black text-xl">
                BF
              </div>
              <span class="text-2xl font-bold text-white">
                Be More Free
              </span>
            </div>
            <p class="text-sm text-gray-400">
              Find your own answers using the Neutral Zone process—a radically 
              different approach to personal transformation.
            </p>
          </div>
          
          <!-- Explore -->
          <div>
            <h3 class="text-white font-semibold mb-4 text-lg">Explore</h3>
            <ul class="space-y-3 text-sm">
              <li><a href="/about" class="hover:text-white transition-colors flex items-center group">
                <span class="mr-2 text-accent-400 group-hover:translate-x-1 transition-transform">→</span>
                About Be More Free
              </a></li>
              <li><a href="/neutral-zone" class="hover:text-white transition-colors flex items-center group">
                <span class="mr-2 text-accent-400 group-hover:translate-x-1 transition-transform">→</span>
                The Neutral Zone Process
              </a></li>
              <li><a href="/practitioner" class="hover:text-white transition-colors flex items-center group">
                <span class="mr-2 text-accent-400 group-hover:translate-x-1 transition-transform">→</span>
                Our Practitioner
              </a></li>
              <li><a href="/blog" class="hover:text-white transition-colors flex items-center group">
                <span class="mr-2 text-accent-400 group-hover:translate-x-1 transition-transform">→</span>
                Blog
              </a></li>
            </ul>
          </div>
          
          <!-- Sessions -->
          <div>
            <h3 class="text-white font-semibold mb-4 text-lg">Sessions</h3>
            <ul class="space-y-3 text-sm">
              <li><a href="/booking/free-trial" class="hover:text-white transition-colors flex items-center group">
                <span class="mr-2 text-accent-400 group-hover:translate-x-1 transition-transform">→</span>
                Free 30-Minute Trial
              </a></li>
              <li><a href="/booking/session" class="hover:text-white transition-colors flex items-center group">
                <span class="mr-2 text-accent-400 group-hover:translate-x-1 transition-transform">→</span>
                Book Full Session
              </a></li>
              <li><a href="/neutral-zone#what-to-expect" class="hover:text-white transition-colors flex items-center group">
                <span class="mr-2 text-accent-400 group-hover:translate-x-1 transition-transform">→</span>
                What to Expect
              </a></li>
            </ul>
          </div>
          
          <!-- Legal -->
          <div>
            <h3 class="text-white font-semibold mb-4 text-lg">Legal</h3>
            <ul class="space-y-3 text-sm">
              <li><a href="/privacy" class="hover:text-white transition-colors flex items-center group">
                <span class="mr-2 text-accent-400 group-hover:translate-x-1 transition-transform">→</span>
                Privacy Policy
              </a></li>
              <li><a href="/terms" class="hover:text-white transition-colors flex items-center group">
                <span class="mr-2 text-accent-400 group-hover:translate-x-1 transition-transform">→</span>
                Terms of Service
              </a></li>
              <li><a href="/disclaimer" class="hover:text-white transition-colors flex items-center group">
                <span class="mr-2 text-accent-400 group-hover:translate-x-1 transition-transform">→</span>
                Disclaimer
              </a></li>
            </ul>
          </div>
        </div>
        
        <div class="border-t border-gray-700 pt-8">
          <div class="bg-gradient-to-r from-primary-900/20 to-accent-900/20 rounded-xl p-6 mb-8 border border-gray-700">
            <p class="text-center text-sm font-medium text-gray-300">
              <span class="text-accent-400">⚡</span> 
              <strong>Not therapy or medical treatment.</strong> 
              The Neutral Zone process is a non-directive exploration method.
              <span class="text-accent-400">⚡</span>
            </p>
          </div>
          
          <p class="text-sm text-center text-gray-500">
            &copy; {new Date().getFullYear()} Be More Free. All rights reserved.
          </p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle with smooth animation
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      
      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
        });
      }
      
      // Add scroll effect to header
      let lastScroll = 0;
      const header = document.querySelector('header');
      
      window.addEventListener('scroll', () => {
        const currentScroll = window.pageYOffset;
        
        if (currentScroll > 100) {
          header?.classList.add('shadow-lg');
        } else {
          header?.classList.remove('shadow-lg');
        }
        
        lastScroll = currentScroll;
      });
    </script>
  </body>
</html>
