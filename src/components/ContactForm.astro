---
// src/components/ContactForm.astro
import type { HTMLAttributes } from 'astro/types';

type Props = {
  ebookTitle: string;
} & HTMLAttributes<'form'>;

const { ebookTitle, ...attrs } = Astro.props;
---

<form
  name="ebook-download"
  method="POST"
  data-netlify="true"
  netlify-honeypot="bot-field"
  action="/thank-you"
  class="bg-white p-8 rounded-2xl shadow-lg border"
  {...attrs}
>
  <input type="hidden" name="form-name" value="ebook-download" />
  <p class="hidden">
    <label>
      Don't fill this out if you're human: <input name="bot-field" />
    </label>
  </p>

  <h3 class="text-2xl font-bold mb-4">Download "{ebookTitle}"</h3>
  <p class="text-gray-600 mb-6">
    Enter your email below to get your free copy and take the first step towards understanding the Neutral Zone.
  </p>
  
  <div class="mb-4">
    <label for="email" class="sr-only">Email Address</label>
    <input 
      type="email" 
      id="email" 
      name="email" 
      placeholder="you@example.com" 
      required
      class="w-full px-4 py-3 rounded-lg border-gray-300 focus:ring-primary-500 focus:border-primary-500 transition"
    />
  </div>
  
  <button 
    type="submit" 
    class="w-full bg-primary-600 text-white px-8 py-4 rounded-lg text-lg font-bold hover:bg-primary-700 transition-all duration-300 transform hover:scale-105"
  >
    Download Now
  </button>

  <p class="text-xs text-gray-500 mt-4">
    By submitting your email, you agree to receive the ebook and occasional updates from Be More Free. You can unsubscribe at any time.
  </p>
</form>